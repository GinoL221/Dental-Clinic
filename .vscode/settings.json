{
  "files.exclude": {
    "**/target": true,
    "**/backend/target": true,
    "**/frontend/node_modules": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.mvn": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/frontend/node_modules": true,
    "**/.git": true
  },
  "files.watcherExclude": {
    "**/target/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true
  },
  // Reduce TypeScript/JSified TA work and Java CodeLens which can trigger heavy analysis
  "typescript.disableAutomaticTypeAcquisition": true,
  "java.referencesCodeLens.enabled": false,
  "java.implementationsCodeLens.enabled": false
}
{
  // Excluir carpetas pesadas para reducir CPU y uso de memoria del editor
  "files.exclude": {
    "**/backend/target": true,
    "**/frontend/node_modules": true,
    "**/frontend/public/assets": true,
    "**/.git": true
  },
  "search.exclude": {
    "**/backend/target": true,
    "**/frontend/node_modules": true,
    "**/frontend/public/assets": true
  },
  "files.watcherExclude": {
    "**/backend/target/**": true,
    "**/frontend/node_modules/**": true,
    "**/frontend/public/assets/**": true
  },
  // Habilitar optimizaciones para archivos grandes
  "editor.largeFileOptimizations": true,

  // Ajustes Java Ãºtiles para este repo
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "interactive"
}