<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main class="main-content auth-page">
      <div class="container-fluid">
        <div class="auth-container">
          <div class="auth-card">
            <div class="auth-header">
              <h2 class="auth-title">Editar Paciente</h2>
              <p class="auth-subtitle">Modifica los datos del paciente</p>
            </div>

            <form id="edit_patient_form" class="auth-form">
              <input type="hidden" id="patient_id" name="id" />

              <div class="mb-3">
                <label for="cardIdentity" class="form-label">DNI</label>
                <input
                  type="number"
                  class="form-control auth-input"
                  id="cardIdentity"
                  name="cardIdentity"
                  placeholder="Ingrese el DNI"
                  required
                />
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="firstName" class="form-label">Nombre</label>
                  <input
                    type="text"
                    class="form-control auth-input"
                    id="firstName"
                    name="firstName"
                    placeholder="Ingrese el nombre"
                    required
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="lastName" class="form-label">Apellido</label>
                  <input
                    type="text"
                    class="form-control auth-input"
                    id="lastName"
                    name="lastName"
                    placeholder="Ingrese el apellido"
                    required
                  />
                </div>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control auth-input"
                  id="email"
                  name="email"
                  placeholder="Ingrese el email"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="admissionDate" class="form-label"
                  >Fecha de Admisión</label
                >
                <input
                  type="date"
                  class="form-control auth-input"
                  id="admissionDate"
                  name="admissionDate"
                  required
                />
              </div>

              <div class="form-group mb-3">
                <h6>Dirección: </h6>

                <div class="row">
                  <div class="col-md-8 mb-2">
                    <label for="street_edit" class="form-label">Calle:</label>
                    <input
                      type="text"
                      class="form-control"
                      id="street_edit"
                      name="street"
                      placeholder="Nombre de la calle"
                    />
                  </div>
                  <div class="col-md-4 mb-2">
                    <label for="number_edit" class="form-label">Número:</label>
                    <input
                      type="number"
                      class="form-control"
                      id="number_edit"
                      name="number"
                      placeholder="Nº"
                    />
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-2">
                    <label for="location_edit" class="form-label"
                      >Localidad:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="location_edit"
                      name="location"
                      placeholder="Ciudad/Localidad"
                    />
                  </div>
                  <div class="col-md-6 mb-2">
                    <label for="province_edit" class="form-label"
                      >Provincia:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="province_edit"
                      name="province"
                      placeholder="Provincia"
                    />
                  </div>
                </div>
              </div>

              <button type="submit" class="btn auth-btn-primary w-100 mb-3">
                Actualizar Paciente
              </button>

              <div class="auth-footer">
                <p>
                  <a href="/patients" class="auth-link"
                    >← Volver a la lista de pacientes</a
                  >
                </p>
              </div>
            </form>

            <div id="response" class="mt-3" style="display: none"></div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- API Scripts en orden correcto -->
    <script type="module" src="/js/api/config.js"></script>
    <script type="module" src="/js/api/utils.js"></script>
    <script type="module" src="/js/api/patient-api.js"></script>

    <!-- Variable global para el ID del paciente -->
    <script>
      window.patientId =
        '<%= typeof patientId !== "undefined" ? patientId : "" %>';
    </script>

    <!-- Controlador modular de página -->
    <script type="module" src="/js/patient/patient-edit-controller.js"></script>
  </body>
</html>
