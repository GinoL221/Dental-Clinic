<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

  <main class="main-content">
    <div class="container mt-4">
      <div class="dentist-list-container fade-in">
        <div class="dentist-list-header d-flex justify-content-between align-items-center">
          <h1 class="dentist-list-title">Odontólogos</h1>
          <a href="/dentists/add" class="btn btn-add-dentist">
            <i class="bi bi-plus-circle me-2"></i>Agregar Dentista
          </a>
        </div>

        <div class="table-container">
          <table id="dentistTable" class="table table-striped mb-0">
            <thead>
              <tr>
                <th>ID</th>
                <th>Matrícula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody id="dentistTableBody"></tbody>
          </table>
        </div>
      </div>

      <div id="response" class="mt-3" style="display: none"></div>

      <div class="row mt-4">
        <div class="col-sm-6" id="div_dentist_updating" style="display: none;">
          <div class="edit-form-container">
            <h4 class="edit-form-title">Modificar Odontólogo</h4>
            <form id="update_dentist_form">
              <div class="form-group mb-3">
                <label class="form-label">ID:</label>
                <input type="text" class="form-control" id="dentist_id" readonly />
              </div>
              <div class="form-group mb-3">
                <label class="form-label">Matrícula:</label>
                <input type="text" class="form-control" id="registrationNumber" />
              </div>
              <div class="form-group mb-3">
                <label class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="name" />
              </div>
              <div class="form-group mb-3">
                <label class="form-label">Apellido:</label>
                <input type="text" class="form-control" id="lastName" />
              </div>
              <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
          </div>
        </div>
      </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script src="/js/api/config.js"></script>
  <script src="/js/api/utils.js"></script>
  <script src="/js/api/auth-api.js"></script>
  <script src="/js/api/dentist-api.js"></script>

  <script src="/js/client-controllers/dentist/dentist-list-controller.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      window.dentistListController = new DentistListController();
    });
  </script>

</body>

</html>