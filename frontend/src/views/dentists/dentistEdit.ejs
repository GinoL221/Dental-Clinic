<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <main class="main-content auth-page">
      <div class="container-fluid">
        <div class="auth-container">
          <div class="auth-card">
            <div class="auth-header">
              <h2 class="auth-title">Editar Odontólogo</h2>
              <p class="auth-subtitle">Modifica los datos del profesional</p>
            </div>

            <form id="edit_dentist_form" class="auth-form">
              <input type="hidden" id="dentist_id" />

              <div class="mb-3">
                <label for="registrationNumber" class="form-label"
                  >Matrícula</label
                >
                <input
                  type="text"
                  class="form-control auth-input"
                  id="registrationNumber"
                  name="registrationNumber"
                  placeholder="Ingrese la matrícula"
                  required
                />
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="firstName" class="form-label">Nombre</label>
                  <input
                    type="text"
                    class="form-control auth-input"
                    id="firstName"
                    name="firstName"
                    placeholder="Ingrese el nombre"
                    required
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="lastName" class="form-label">Apellido</label>
                  <input
                    type="text"
                    class="form-control auth-input"
                    id="lastName"
                    name="lastName"
                    placeholder="Ingrese el apellido"
                    required
                  />
                </div>
              </div>

              <button type="submit" class="btn auth-btn-primary w-100 mb-3">
                Actualizar Odontólogo
              </button>

              <div class="auth-footer">
                <p>
                  <a href="/dentists" class="auth-link"
                    >← Volver a la lista de odontólogos</a
                  >
                </p>
              </div>
            </form>

            <div id="response" class="mt-3" style="display: none"></div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- API Scripts en orden correcto -->
    <script type="module" src="/js/api/config.js"></script>
    <script type="module" src="/js/api/utils.js"></script>
    <script type="module" src="/js/api/dentist-api.js"></script>

    <!-- Controlador de página -->
    <script>
      window.dentistId =
        '<%= typeof dentistId !== "undefined" ? dentistId : "" %>';
    </script>
    <script type="module" src="/js/dentist/dentist-controller.js"></script>
  </body>
</html>
